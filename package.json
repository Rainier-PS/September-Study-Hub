{
  "name": "september-study-hub",
  "version": "1.0.0",
  "description": "September Study Hub is a cozy productivity application featuring a Pomodoro timer, notes, to-do lists, a calendar, flashcards, and a music player â€” all wrapped in a warm September theme.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "productivity",
    "study",
    "pomodoro",
    "notes",
    "to-do",
    "calendar",
    "flashcards",
    "music",
    "electron",
    "desktop-app"
  ],
  "author": "Rainier-PS",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.septemberstudyhub.app",
    "productName": "September Study Hub",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/.*",
      "!**/*.map",
      "!**/node_modules/.bin",
      "!src/",
      "!tests/",
      "!docs/"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": ["nsis", "zip"]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"]
    },
    "dmg": {
      "background": "build/background.png",
      "iconSize": 128,
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "linux": {
      "icon": "build/icons",
      "target": ["AppImage", "deb", "tar.gz"],
      "category": "Utility"
    }
  }
}
